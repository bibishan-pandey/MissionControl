@model IEnumerable<MissionControlSystem.Models.ControlSystem>

@{
    ViewData["Title"] = "Control System";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-2xl font-bold mb-4">Control System</h1>

<p class="mb-4">
    <a href="@Url.Action("Create")" class="text-blue-500 hover:text-blue-700">Create New</a>
</p>

<table class="min-w-full bg-white border border-gray-300">
    <thead>
        <tr class="bg-gray-200">
            <th class="py-2 px-4 border-b text-left text-sm font-semibold text-gray-700">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="py-2 px-4 border-b text-left text-sm font-semibold text-gray-700">
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th class="py-2 px-4 border-b text-left text-sm font-semibold text-gray-700">
                @Html.DisplayNameFor(model => model.Version)
            </th>
            <th class="py-2 px-4 border-b text-left text-sm font-semibold text-gray-700">
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th class="py-2 px-4 border-b"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr class="hover:bg-gray-100">
                <td class="py-2 px-4 border-b">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="py-2 px-4 border-b">
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td class="py-2 px-4 border-b">
                    @Html.DisplayFor(modelItem => item.Version)
                </td>
                <td class="py-2 px-4 border-b">
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td class="py-2 px-4 border-b">
                    <a href="@Url.Action("Edit", new { id = item.Id })" class="text-blue-500 hover:text-blue-700">Edit</a> |
                    <a href="@Url.Action("Details", new { id = item.Id })" class="text-blue-500 hover:text-blue-700">Details</a> |
                    <a href="@Url.Action("Delete", new { id = item.Id })" class="text-blue-500 hover:text-blue-700">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
