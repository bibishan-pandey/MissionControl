@using Microsoft.AspNetCore.Mvc.TagHelpers
@model MissionControlSystem.Models.ControlSystem

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-2xl font-bold mb-4">Create</h1>

<h4 class="text-lg font-semibold mb-2">Control System</h4>
<hr class="mb-4" />

<div class="max-w-md mx-auto">
    <form asp-action="Create" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
        <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>

        <div class="mb-4">
            <label asp-for="Name" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Name" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" />
            <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Location" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Location" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" />
            <span asp-validation-for="Location" class="text-red-500 text-sm"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Version" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Version" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" />
            <span asp-validation-for="Version" class="text-red-500 text-sm"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Status" class="block text-sm font-medium text-gray-700"></label>
            @Html.DropDownListFor(model => model.Status,
                new SelectList(Enum.GetValues(typeof(ControlSystemStatus)).Cast<ControlSystemStatus>().Select(e => new SelectListItem
                {
                    Value = e.ToString(),
                    Text = e.ToString()
                }), "Value", "Text"),
                new { @class = "mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" })
            <span asp-validation-for="Status" class="text-red-500 text-sm"></span>
        </div>


        <div>
            <input type="submit" value="Create" class="w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 rounded" />
        </div>
    </form>
</div>

<div class="mt-4">
    <a href="@Url.Action("Index")" class="text-blue-500 hover:text-blue-700">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
