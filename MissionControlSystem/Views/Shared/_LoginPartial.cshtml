@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="flex space-x-4">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="hover:text-gray-300 font-medium" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                Hello @User.Identity?.Name!
            </a>
        </li>
        <li class="nav-item">
            <form class="inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="hover:text-gray-300 font-medium">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="hover:text-gray-300 font-medium" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="hover:text-gray-300 font-medium" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
